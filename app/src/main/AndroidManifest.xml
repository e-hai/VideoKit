<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <!-- Android 13+ 需要 -->
    <uses-permission android:name="android.permission.READ_MEDIA_VIDEO"/>

    <!-- Android 12 及以下 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="32"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:supportsRtl="true"
        android:theme="@style/Theme.VideoKit"
        tools:targetApi="n">
        <activity
            android:name="com.kit.video.sample.editor.EditorActivity"
            android:exported="false"
            android:label="@string/title_activity_editor"
            android:theme="@style/Theme.VideoKit" />
        <activity
            android:name="com.kit.video.sample.generator.GeneratorSampleActivity"
            android:exported="false" />
        <activity
            android:name="com.kit.video.sample.list.VideoListSampleActivity"
            android:exported="false" />
        <activity
            android:name="com.kit.video.sample.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.kit.video.sample.list.SinglePlayActivity"
            android:exported="false" />
    </application>

</manifest>